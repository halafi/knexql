{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "lib": ["es6", "es2015", "dom"],
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "baseUrl": "src",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
